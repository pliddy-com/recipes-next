{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext", "ES2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "types": ["react/next", "react-dom/next"]
  },
  "include": [
    "**/*.config.ts",
    "**/*.ts",
    "**/*.tsx",
    "custom.d.ts",
    "next-env.d.ts",
    "src",
    "src/lib/__mocks__/lib",
    "src/lib/__mocks__/next"
  ],
  "extends": "./node_modules/@tsconfig/recommended/tsconfig.json",
  "exclude": ["node_modules", "out", ".next", ".swc"]
}
