{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["react/next", "react-dom/next", "jest", "node"],
    "strict": true
  },
  "exclude": ["node_modules", "out", ".next", ".swc", "src/types", "*.js"],
  "include": [
    "src",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.config.ts",
    "**/*.ts",
    "**/*.tsx",
    "custom.d.ts",
    "next-env.d.ts",
    "src/lib/__mocks__/lib",
    "src/lib/__mocks__/next",
    "jest.config.js",
    "src/scripts"
  ],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
